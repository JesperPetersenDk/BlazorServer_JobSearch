            });
        listTopicMain.Add(new dropdownModel
            {
                dropId = 1,
                Text = "Fyn",
            });
        listTopicMain.Add(new dropdownModel
            {
                dropId = 1,
                Text = "Nordjylland",
            });
        listTopicMain.Add(new dropdownModel
            {
                dropId = 1,
                Text = "Midtjylland",
            });
        listTopicMain.Add(new dropdownModel
            {
                dropId = 1,
                Text = "Sydjylland",
            });

    }
}